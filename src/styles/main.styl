textColor = blue

border-color(col)
    border solid thin col

side-card-pos(topVal)
    position absolute
    top topVal
    height 33.3%

side-card-img(size)
    width size
    height size
    object-fit contain
    border thin solid black
    display block
    margin 0.4vw auto

html
    font-size 1.1vw

    @media (max-width: 800px)
        font-size 1em

nav
    border-color(blue)
    border-radius 10px
    display flex
    justify-content space-between
    align-items center
    padding 10px 15px

    .nav__title
        font-size 1.8em
        font-weight bold
        color blue
        flex-grow 1

    & a
        display inline-block
        text-decoration none
        border-radius 10px
        color textColor
        font-weight bold
        font-size 1.2em
        padding 8px 16px
        margin-left 10px

        &:hover,
        &.active
            color white
            background textColor

.gallery
    display grid
    width 90%
    height 25vw
    margin 1vw auto
    grid-template-rows repeat(2, 1fr)
    grid-template-columns 2fr 1fr 1fr

    @media (max-width: 800px)
        display flex
        flex-direction column
        height auto

    &__image
        width 100%
        height 100%
        object-fit contain
        transition transform 0.3s ease

        &:hover
            transform scale(1.05)

        &--pos1
            grid-area 1/1/3/2
    
        &--pos2
            grid-area 1/2/3/3

        &--pos3
            grid-area 1/3/2/4

        &--pos4
            grid-area 2/3/3/4

.stroke
    width 98%
    height 11vw
    margin 0 auto
    padding-left 0px

    &__white-block
        width 5%
        height 100%
        display inline-block
        vertical-align top

    &__small-block
        height 100%
        width 10%
        padding 0.4vw
        box-sizing border-box
        display inline-block
        vertical-align top
        font-size 0.9vw
        text-align center

        & img
            display block
            margin 0.4vw auto
            width 5.5vw
            height 5.5vw
            object-fit contain
            border solid thin black
            transition transform 0.3s ease

            &:hover
                transform scale(1.05)

        & h4
            margin 0.4vw 0
            font-size 0.9vw

        & p
            margin 0.4vw 0


        & a
            color brown
            text-decoration none
            font-size 0.9vw

            &:hover
                color white
                background textColor

.layout
    width 98%
    height 42vw
    margin 1.6vw auto
    overflow hidden
    box-sizing border-box

.side-column
    float left
    width 9%
    height 100%
    position relative

.side-card
    width 100%
    padding 0.6vw
    box-sizing border-box
    font-size 0.85vw
    text-align center
    position absolute

    &--top
        side-card-pos(0)

    &--middle
        side-card-pos(33.3%)

    &--bottom
        side-card-pos(66.6%)

    &__img
        side-card-img(5.5vw)
        transition transform 0.3s ease

        &:hover
            transform scale(1.05)

    &__title
        margin 0.3vw 0
        font-size 0.85vw

    &__text
        margin 0.3vw 0

    &__link
        color brown
        text-decoration none
        
        &:hover
                color white
                background textColor

.content
    float left
    width 76.5%
    height 100%
    margin 0 1%
    padding 1.2vw
    box-sizing border-box
    font-size 0

.article
    width 100%

    &__title
        text-align center
        font-size 1.4vw
        margin 0.8vw auto 1.2vw

    &__text
        width 25%
        height 32vw
        display inline-block
        vertical-align top
        font-size 1.3vw
        text-align justify
        overflow hidden

        & a
            color brown
            text-decoration none
            
            &:hover
                color textColor

    &__image
        width 50%
        height 32vw
        display inline-block
        padding 0.8vw
        box-sizing border-box
        text-align center

        & img
            width 100%
            height 100%
            object-fit contain
            border thin solid black
            transition transform 0.3s ease

            &:hover
                transform scale(1.05)

.toyota-block
    display flex
    flex-direction column
    align-items center
    width 100%
    margin 1vw auto
    height 68vw

    @media (max-width: 800px)
        height auto

    &__img
        width 50%
        height 40vw
        object-fit contain
        transition transform 0.3s ease

        &:hover
            transform scale(1.05)

    &__text
        margin 0 1vw
        font-size 1.3vw

        @media (max-width: 800px)
            font-size 1em

details
    margin 2vw
    font-size 1.2vw

    @media (max-width: 800px)
        font-size 1em

table
    border 1px solid lightgrey
    width 80%
    text-align center
    margin 0 auto

    & td,
    & th
        border 1px solid lightgrey
        padding 10px

footer
    & p
        margin 0 2vw

@media (max-width: 800px)
    nav
        flex-wrap wrap
        padding 2vw
        
        .nav__title
            flex-basis 100% 
            text-align center
            margin-bottom 10px
            font-size 1.5em 
            order 1
        
        div
            flex-basis 100%
            display flex
            flex-wrap wrap
            justify-content center
            gap 1vw
            order 2
            
            & a
                margin-left 0
                flex-grow 1
                text-align center
                font-size 1em
                padding 1vw
                
                &:last-child:nth-child(odd)
                    flex-basis 100%

@media (max-width: 800px)
    .stroke
        height auto
        padding 1vw 0
        
        &__white-block
            display none
        
        &__small-block
            width 100%
            height auto
            display block
            font-size 1em
            
            & img
                width 80%
                height auto
                margin 5vw auto
                font-size 14px

            & h4
                font-size 1em

            & a
                font-size 1em

@media (max-width: 800px)
    .layout
        width 100%
        height auto
        margin 2vw auto
        padding 0 2vw
        overflow visible
        
    .side-column
        float none
        width 100%
        height auto
        position static
        margin 0
        display flex
        flex-wrap wrap
        justify-content center
        gap 1vw
    
    .side-card
        position static
        width 100%
        height auto
        padding 2vw
        margin 0
        font-size 1em
        
        &--top,
        &--middle,
        &--bottom
            top auto
            left auto
            right auto
            bottom auto
        
        &__img
            width 80%
            height auto
            margin 2vw auto
        
        &__title
            font-size 1em
            margin 2vw 0
        
        &__text
            font-size 1em
            margin 2vw 0
        
        &__link
            font-size 1em
    
    .content
        float none
        width 100%
        height auto
        margin 0
        padding 2vw
    
    .article
        &__title
            font-size 5vw !important
            margin 2vw 0
        
        &__text
            width 100%
            height auto
            display block
            font-size 3vw !important
            margin 2vw 0
            padding 0
            text-align justify
        
        &__image
            width 80%
            height auto
            display block
            padding 2vw
            margin 2vw auto
            
            & img
                height auto